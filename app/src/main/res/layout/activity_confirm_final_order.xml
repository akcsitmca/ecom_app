<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmFinalOrder">

    <TextView
        android:id="@+id/final_order_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Provide your Shipment Details"
        android:textColor="@android:color/background_dark"
        android:textSize="18dp"
        android:layout_margin="15dp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/final_order_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/final_order_txt"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="100dp"
        android:hint="Enter Your Name"
        />
    <EditText
        android:id="@+id/final_order_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/final_order_name"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:hint="Enter Your Phone Number"
        android:inputType="number"
        />


    <EditText
        android:id="@+id/final_order_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/final_order_phone"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:hint="Enter Your Address"
        />

    <EditText
        android:id="@+id/final_order_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/final_order_address"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:hint="Enter Your City"
        />

    <EditText
        android:id="@+id/final_order_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/final_order_city"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:enabled="false"
        />

    <Button
        android:id="@+id/final_order_confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="Confirm"
        android:textSize="20dp"
        android:textStyle="bold"/>

</RelativeLayout>