<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryAdtivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Add New Product"
        android:textSize="20sp"
        android:textStyle="bold"
         />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/slogan_category"
        android:layout_marginTop="45dp">
        <ImageView

            android:id="@+id/t_shirts"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/shirt1"/>
        
        <ImageView
            android:id="@+id/sports_t_shirts"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/sports_tsh"/>

        <ImageView
            android:id="@+id/female_dress"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/female_dress"/>

        <ImageView
            android:id="@+id/sweaters"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/sweater"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/linear1_category_layout"
        android:layout_marginTop="45dp">
        <ImageView

            android:id="@+id/glasses"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/glass"/>

        <ImageView
            android:id="@+id/purse_bag"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/purse_bag"/>

        <ImageView
            android:id="@+id/hat"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/hat"/>

        <ImageView
            android:id="@+id/shoes"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/shoes"
            android:layout_marginStart="16dp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/linear2_category_layout"
        android:layout_marginTop="45dp">
        <ImageView

            android:id="@+id/headphone"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/headphone"/>

        <ImageView
            android:id="@+id/laptop"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/laptop"/>

        <ImageView
            android:id="@+id/watch"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/watch"/>

        <ImageView
            android:id="@+id/mobile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/mobile"
            android:layout_marginStart="16dp"/>


    </LinearLayout>

</RelativeLayout>